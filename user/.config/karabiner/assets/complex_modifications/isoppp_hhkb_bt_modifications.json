{
    "title": "isoppp / modifications for HHKB",
    "rules": [
        {
            "description": "backslash to delete_forward for HHKB-BT",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "backslash"
                    },
                    "to": [
                        {
                            "key_code": "delete_forward"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "vendor_id": 1278,
                                    "product_id": 514
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "delete_or_backspace to backslash for HHKB-BT",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "delete_or_backspace"
                    },
                    "to": [
                        {
                            "key_code": "backslash"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "vendor_id": 1278,
                                    "product_id": 514
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "grave_accent_and_tilde(`) to delete_or_backspace for HHKB-BT",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "grave_accent_and_tilde",
                        "modifiers": {
                            "optional": ["left_command"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "delete_or_backspace"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "vendor_id": 1278,
                                    "product_id": 514
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Esc to grave_accent_and_tilde for HHKB-BT",
            "manipulators": [
                {
                    "type": "basic",
                    "from": {
                        "key_code": "escape",
                        "modifiers": {
                            "optional": ["left_shift", "right_shift"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "grave_accent_and_tilde"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "vendor_id": 1278,
                                    "product_id": 514
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Cmd + Esc to Esc for HHKB-BT",
            "manipulators": [
                {
                    "description": "Cmd + Esc to Esc",
                    "type": "basic",
                    "from": {
                        "key_code": "escape",
                        "modifiers": {
                            "mandatory": [
                                "command"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "escape"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "vendor_id": 1278,
                                    "product_id": 514
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "description": "Shift + delete_or_backspace to delete_forward for HHKB-BT",
            "manipulators": [
                {
                    "description": "Cmd + Esc to Esc",
                    "type": "basic",
                    "from": {
                        "key_code": "delete_or_backspace",
                        "modifiers": {
                            "mandatory": [
                                "left_shift"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "delete_forward"
                        }
                    ],
                    "conditions": [
                        {
                            "type": "device_if",
                            "identifiers": [
                                {
                                    "vendor_id": 1278,
                                    "product_id": 514
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
